{
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "plugin:harmony/latest"
  ],
  "overrides": [
    {
      "extends": "plugin:harmony/ts-recommended",
      "files": [
        "*.spec.ts"
      ],
      "rules": {
        "require-yield": 0,
        "@typescript-eslint/no-unused-vars": 0,
        "prefer-const": 0,
        "no-constant-condition": 0
      }
    },
    {
      "extends": "plugin:harmony/ts-recommended",
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "excludedFiles": [
        "*.spec.ts"
      ]
    }
  ]
}
