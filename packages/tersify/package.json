{
	"name": "tersify",
	"version": "4.0.0",
	"description": "Creates a terse representation of code",
	"homepage": "https://github.com/unional/tersify/tree/main/packages/tersify",
	"bugs": {
		"url": "https://github.com/unional/tersify/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/unional/tersify.git",
		"directory": "packages/tersify"
	},
	"license": "MIT",
	"author": {
		"name": "Homa Wong",
		"email": "homawong@gmail.com"
	},
	"sideEffects": false,
	"type": "module",
	"imports": {
		"#tersify": "./src/index.ts"
	},
	"exports": {
		".": {
			"source": "./src/index.ts",
			"import": {
				"types": "./esm/index.d.mts",
				"default": "./esm/index.mjs"
			},
			"require": {
				"types": "./cjs/index.d.cts",
				"default": "./cjs/index.cjs"
			}
		}
	},
	"main": "./cjs/index.cjs",
	"browser": {
		"./cjs/constants.d.cts": "./cjs/constants.browser.d.cts",
		"./cjs/constants.cjs": "./cjs/constants.browser.cjs",
		"./cjs/constants.cjs.map": "./cjs/constants.browser.cjs.map",
		"./cjs/tersifyFunction.d.cts": "./cjs/tersifyFunction.browser.d.cts",
		"./cjs/tersifyFunction.cjs": "./cjs/tersifyFunction.browser.cjs",
		"./cjs/tersifyFunction.cjs.map": "./cjs/tersifyFunction.browser.cjs.map",
		"./esm/constants.d.mts": "./esm/constants.browser.d.mts",
		"./esm/constants.mjs": "./esm/constants.browser.mjs",
		"./esm/constants.mjs.map": "./esm/constants.browser.mjs.map",
		"./esm/tersifyFunction.d.mts": "./esm/tersifyFunction.browser.d.mts",
		"./esm/tersifyFunction.mjs": "./esm/tersifyFunction.browser.mjs",
		"./esm/tersifyFunction.mjs.map": "./esm/tersifyFunction.browser.mjs.map",
		"./src/constants.ts": "./src/constants.browser.ts",
		"./src/tersifyFunction.ts": "./src/tersifyFunction.browser.ts"
	},
	"types": "./esm/index.d.mts",
	"files": [
		"cjs",
		"esm",
		"src",
		"!**/*.{spec,test,unit,accept,integrate,system,stories}.*"
	],
	"scripts": {
		"build": "tsdown",
		"clean": "rimraf cjs coverage dist esm lib libm tslib",
		"coverage": "vitest run --coverage",
		"lint": "pnpm run -w check",
		"nuke": "rimraf node_modules",
		"sb": "storybook dev -p 6006",
		"sb:build": "storybook build",
		"size": "size-limit",
		"test": "vitest run",
		"test:jsdom": "vitest run --project=jsdom",
		"test:node": "vitest run --project=node",
		"verify": "npm-run-all clean -p build lint coverage -p size",
		"watch": "vitest"
	},
	"dependencies": {
		"acorn": "^8.15.0",
		"is-buffer": "^2.0.5",
		"unpartial": "^1.0.5"
	},
	"devDependencies": {
		"@repobuddy/storybook": "^2.19.1",
		"@repobuddy/typescript": "^2.1.0",
		"@size-limit/preset-small-lib": "^12.0.0",
		"@storybook-community/storybook-dark-mode": "^7.1.0",
		"@storybook/addon-a11y": "^10.2.8",
		"@storybook/addon-docs": "^10.2.8",
		"@storybook/addon-vitest": "^10.2.8",
		"@storybook/react-vite": "^10.2.8",
		"@tailwindcss/vite": "^4.1.18",
		"@types/react": "^19.2.14",
		"@types/ws": "^8.18.1",
		"@vitest/browser-playwright": "4.0.18",
		"@vitest/coverage-v8": "^4.0.18",
		"dedent": "^1.7.1",
		"jsdom": "^28.1.0",
		"npm-run-all2": "^8.0.0",
		"playwright": "^1.58.2",
		"react": "^19.2.4",
		"rimraf": "^6.1.3",
		"size-limit": "^9.0.0",
		"storybook": "^10.2.8",
		"storybook-addon-tag-badges": "^3.0.6",
		"tailwindcss": "^4.1.18",
		"tsdown": "^0.20.0",
		"type-plus": "8.0.0-beta.8",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"ws": "^8.19.0"
	}
}
